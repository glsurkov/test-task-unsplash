{
    "trailingComma": "all",
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrderGroupNamespaceSpecifiers": true,
    "importOrderParserPlugins": ["typescript", "jsx"],
    "importOrderSortSpecifiers": true,
    "importOrderSeparation": true,
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^@/app(.*)$",
        "^@/pages(.*)$",
        "^@/layouts(.*)$",
        "^@/widgets(.*)$",
        "^@/features(.*)$",
        "^@/entities(.*)$",
        "^@/shared(.*)$",
        "^[./]"
    ]
}
